#Day17  Valid Sudoku 
algo
*we can use set as set does not allow duplicates
*make string of the form -> "row/column/box+i/j/(i/3*3+j/3)+num"
*thus by this we can check if the number already exists or not
#100DaysOfCode #100daysofcodechallenge 
https://leetcode.com/problems/valid-sudoku/submissions/â€¦

***********************
class Solution {
public:
    bool isValidSudoku(vector<vector<char>>& board) {
        unordered_set<std::string> seen;
        for(int i=0;i<9;i++){
            for(int j=0;j<9;j++){
                if(board[i][j]!='.'){
                    int num = board[i][j]-'0';

                    string s1 = "row"+to_string(i)+to_string(num);
                    string s2 = "column"+to_string(j)+to_string(num);
                    string s3 = "box"+to_string((i/3)*3+j/3)+to_string(num);  
                    if(seen.find(s1) != seen.end() or seen.find(s2) != seen.end() or seen.find(s3) != seen.end()){
                        return false;
                    }
                    seen.insert(s1);
                    seen.insert(s2);
                    seen.insert(s3);
                }
            }
        }
        return true;
    }
};
